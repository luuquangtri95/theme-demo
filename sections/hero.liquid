{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Tiêu đề",
      "default": "Chào mừng đến với Shopify!"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hình ảnh nền"
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}

<div class="hero">
  <img src="{{ section.settings.image | img_url: 'master' }}" alt="Hero Image">
  <h1>{{ section.settings.heading }}</h1>
</div>
